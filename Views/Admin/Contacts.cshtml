@model List<Contacts>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1">
    <title>Admin Dashboard</title>
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 85px;
            margin-bottom: 40px;
            padding: 2rem 1.5rem;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        #contact-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        th {
            background-color: #343a40;
            color: white;
        }

        .delete-button {
            background-color: #dc3545;
            color: white;
            padding: 6px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<table class="table" id="contact-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td style="background-color:#353a40;color:white;">@contact.name</td>
                <td>@contact.email</td>
                <td>@contact.subject</td>
                <td>@contact.message</td>
                <td>
                    <form asp-controller="Admin" asp-action="DeleteContact" method="post">
                        <input type="hidden" name="email" value="@contact.email" />
                        <button type="submit" class="delete-button" style="margin-right:-40px;margin-left:30px;">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
