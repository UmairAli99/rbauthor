@model List<Site>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1">
    <title>Admin Dashboard</title>
    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 85px;
            margin-bottom: 40px;
            padding: 2rem 1.5rem;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        #site-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        th {
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<table class="table" id="site-table">
    <thead>
        <tr>
            <th>Site ID</th>
            <th>Site Address</th>
            <th>Latitude</th>
            <th>Longitude</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var site in Model)
        {
            <tr>
                <td>@site.SiteId</td>
                <td>@site.SiteAddress</td>
                <td>@site.Latitude</td>
                <td>@site.Longitude</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="SaveSites">
    <button style="background-color:#343a40; color:white;
padding:20px 50px; border-radius:3px; margin-left:30px; font-weight:bolder;">
        Add Sites
    </button>
</a>